{
  "name": "unicode-shaper",
  "type": "module",
  "version": "0.6.0",
  "description": "Shape unicode text so that renderers like WebGL and WebGPU can properly display the glyphs.",
  "keywords": [
    "unicode",
    "parser",
    "shaper",
    "Rust",
    "LTR",
    "Left to Right Text"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "typescript": {
    "main": "src/index.ts"
  },
  "main": "dist/index.js",
  "files": [
    "assets",
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Open-S2/unicode-shaper.git"
  },
  "author": "Craig OConnor",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Open-S2/unicode-shaper/issues"
  },
  "homepage": "https://github.com/Open-S2/unicode-shaper#readme",
  "devDependencies": {
    "@skypack/package-check": "^0.2.2",
    "@types/bun": "^1.2.5",
    "@types/node": "^22.13.10",
    "coveralls": "^3.1.1",
    "dependency-cruiser": "^16.10.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jsdoc": "^50.6.6",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-tsdoc": "^0.4.0",
    "prettier": "^3.5.3",
    "typedoc": "^0.27.9",
    "typedoc-plugin-coverage": "^3.4.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "scripts": {
    "build": "rm -rf dist && mkdir dist && bun build:rust && rm -f -- tsconfig.tsbuildinfo && tsc",
    "build:rust": "bun build:rust:cargo && bun build:rust:optimize && bun build:rust:strip && bun build:rust:ts",
    "build:rust:cargo": "RUSTFLAGS=\"-Z location-detail=none -Z fmt-debug=none\" cargo build --target wasm32-unknown-unknown --release --workspace --package rust-wasm",
    "build:rust:optimize": "wasm-opt -Oz --vacuum -o target/wasm32-unknown-unknown/release/optimized.wasm target/wasm32-unknown-unknown/release/unicode_shaper_wasm.wasm",
    "build:rust:strip": "wasm-strip target/wasm32-unknown-unknown/release/optimized.wasm",
    "build:rust:snip": "wasm-snip --snip-rust-fmt-code --snip-rust-panicking-code -o target/wasm32-unknown-unknown/release/optimized.wasm target/wasm32-unknown-unknown/release/unicode_shaper_wasm.wasm",
    "build:rust:twiggy": "twiggy top target/wasm32-unknown-unknown/release/optimized.wasm",
    "build:rust:ts": "bun run build-wasm.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prepare": "bun run lint && bun run build && bun test",
    "package-check": "package-check",
    "test": "cargo test && bun clippy && bun test",
    "test:dev": "bun test --watch",
    "clippy": "cargo clippy --target wasm32-unknown-unknown"
  }
}
